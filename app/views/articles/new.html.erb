<%= form_for [@category, @article] do |f| %>
 <p><%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :body %><br>
    <%= f.text_area :body %>
  </p>

  <p>
    <%= f.label :email %><br>
    <%= f.text_field :email %>
  </p>

 <p>
    <%= f.label :price %><br>
    <%= f.text_field :price %>
  </p>

  <p>
  <input type="hidden" name="article[category_id]" value="<%= @category.id %>">
  </p>

  <p>
    <%= f.submit %>
  </p>

<% end %>

<%= link_to 'Back', '/'  %>
